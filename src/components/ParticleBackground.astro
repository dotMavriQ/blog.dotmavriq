---
// Lightweight canvas particle animation (respecting prefers-reduced-motion)
const density = 55;
---
<canvas id="particle-bg" aria-hidden="true"></canvas>
<style>
  #particle-bg { position:fixed; inset:0; width:100%; height:100%; z-index:-2; background:radial-gradient(circle at 30% 30%, #1d2021, #1b1d1d); }
  @media (prefers-reduced-motion: reduce) { #particle-bg{ display:none; } }
</style>
<script>
  const canvas = document.getElementById('particle-bg');
  if (canvas && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    const ctx = canvas.getContext('2d');
    const pr = window.devicePixelRatio || 1;
    let w, h; let particles = [];
    function resize(){ w = canvas.width = innerWidth * pr; h = canvas.height = innerHeight * pr; canvas.style.width=innerWidth+'px'; canvas.style.height=innerHeight+'px'; }
    function init(){ particles = []; const count = Math.round((w*h)/75000); for(let i=0;i<count;i++){ particles.push({ x:Math.random()*w, y:Math.random()*h, r:1+Math.random()*2, vx:(Math.random()-0.5)*0.15, vy:(Math.random()-0.5)*0.15, a:0.3+Math.random()*0.5 }); }}
    function step(){ ctx.clearRect(0,0,w,h); ctx.fillStyle='#fabd2f22'; particles.forEach(p=>{ p.x+=p.vx; p.y+=p.vy; if(p.x<0) p.x=w; if(p.x>w) p.x=0; if(p.y<0) p.y=h; if(p.y>h) p.y=0; ctx.beginPath(); ctx.arc(p.x,p.y,p.r,0,Math.PI*2); ctx.fill();}); requestAnimationFrame(step); }
    resize(); init(); step(); addEventListener('resize', ()=>{ resize(); init(); });
  }
</script>