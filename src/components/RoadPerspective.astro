---
// Perspective road outline + animated center dash to align with running GIF.
// Render underneath interactive UI (z-index -1) but above particle background.
---
<div class="persp-road" aria-hidden="true"></div>
<style>
  .persp-road { position:fixed; inset:0; pointer-events:none; z-index:-1; backface-visibility:hidden; transform:translateZ(0); }
  .persp-road::before, .persp-road::after { content:""; position:absolute; left:50%; transform:translateX(-50%); }
  /* Road shape (trapezoid) */
  .persp-road { --road-h:68vh; --dash-color:#ebdbb2; --dash-length:18px; --dash-gap:42px; --dash-cycle:60px; --dash-speed:0.84s; --stripe-top-trim:14vh; }
  .persp-road::before { bottom:0; width:60vw; height:var(--road-h); max-width:840px; background:linear-gradient(to bottom,rgba(40,40,40,0.0),rgba(40,40,40,0.55)); clip-path:polygon(47.5% 0,52.5% 0,100% 100%,0 100%); border-left:2px solid var(--dash-color); border-right:2px solid var(--dash-color); box-shadow:0 0 4px -1px var(--dash-color); }
  /* Use a duplicated gradient inside a translated pseudo element for hitchâ€‘free upward motion */
  .persp-road::after { bottom:0; width:2px; margin-left:-1px; height:calc(var(--road-h) + var(--stripe-top-trim)); background:repeating-linear-gradient(to bottom,var(--dash-color) 0 var(--dash-length),transparent var(--dash-length) calc(var(--dash-length) + var(--dash-gap))); animation:dashFlow var(--dash-speed) linear infinite; filter:drop-shadow(0 0 3px var(--dash-color)) drop-shadow(0 0 7px rgba(235,219,178,0.42)); will-change:background-position; clip-path:inset(var(--stripe-top-trim) 0 0 0); transform:translateZ(0); }
  @media (max-width:1024px){ .persp-road{ --stripe-top-trim:16vh; } }
  @media (max-width:820px){ .persp-road{ --stripe-top-trim:18vh; } }
  @media (max-width:430px){ .persp-road{ --stripe-top-trim:20vh; } }
  @keyframes dashFlow { from { background-position-y:0; } to { background-position-y:-60px; } }
  /* Responsively lower the vanishing point on smaller viewports so the center dashes end around the GIF */
  @media (max-width:1200px){ .persp-road{ --road-h:66vh; } }
  @media (max-width:1024px){ .persp-road{ --road-h:64vh; } }
  @media (max-width:820px){ .persp-road{ --road-h:62vh; } }
  @media (max-width:430px){ .persp-road{ --road-h:60vh; --dash-speed:1s; } }
  @media (max-width:740px){ .persp-road::before{ width:82vw; } }
  @media (prefers-reduced-motion: reduce){ .persp-road::after{ animation:dashFlow calc(var(--dash-speed)*3) linear infinite; opacity:.55; } }
</style>