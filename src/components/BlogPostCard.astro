---
interface Props {
  title: string;
  date: string;
  excerpt: string;
  image?: string;
  href: string;
  tags?: string[];
}

const { title, date, excerpt, image, href, tags = [] } = Astro.props;

// Format the date nicely
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="blog-card">
  {image && (
    <a href={href} class="blog-card__image-link">
      <img src={image} alt={title} class="blog-card__image" loading="lazy" />
    </a>
  )}
  <div class="blog-card__content">
    <time datetime={date} class="blog-card__date">{formattedDate}</time>

    {tags.length > 0 && (
      <div class="blog-card__tags">
        {tags.map(tag => (
          <span class="blog-card__tag">{tag}</span>
        ))}
      </div>
    )}

    <h3 class="blog-card__title">
      <a href={href}>{title}</a>
    </h3>

    <p class="blog-card__excerpt">{excerpt}</p>

    <a href={href} class="blog-card__cta">Read More</a>
  </div>
</article>

<style>
  .blog-card {
    display: flex;
    flex-direction: column;
    background-color: var(--bg1, #3c3836);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
  }

  .blog-card__image-link {
    display: block;
    overflow: hidden;
    height: 200px;
  }

  .blog-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .blog-card:hover .blog-card__image {
    transform: scale(1.05);
  }

  .blog-card__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .blog-card__date {
    font-size: 0.875rem;
    color: var(--fg4, #a89984);
    margin-bottom: 0.5rem;
    display: block;
  }

  .blog-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .blog-card__tag {
    font-size: 0.75rem;
    background-color: var(--bg2, #504945);
    color: var(--aqua, #8ec07c);
    padding: 0.25rem 0.5rem;
    border-radius: 999px;
  }

  .blog-card__title {
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
    line-height: 1.3;
  }

  .blog-card__title a {
    color: var(--yellow, #fabd2f);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .blog-card__title a:hover {
    color: var(--orange, #fe8019);
  }

  .blog-card__excerpt {
    color: var(--fg2, #d5c4a1);
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    line-height: 1.6;
    flex-grow: 1;
  }

  .blog-card__cta {
    display: inline-block;
    background-color: var(--bg2, #504945);
    color: var(--fg, #ebdbb2);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.2s ease, color 0.2s ease;
    align-self: flex-start;
    font-size: 0.95rem;
  }

  .blog-card__cta:hover {
    background-color: var(--bg3, #665c54);
    color: var(--yellow, #fabd2f);
  }

  @media (min-width: 768px) {
    .blog-card {
      flex-direction: row;
      align-items: stretch;
    }

    .blog-card__image-link {
      flex: 0 0 250px;
      height: auto;
    }

    .blog-card__content {
      flex: 1;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .blog-card,
    .blog-card__image,
    .blog-card__cta {
      transition: none;
    }

    .blog-card:hover {
      transform: none;
    }

    .blog-card:hover .blog-card__image {
      transform: none;
    }
  }
</style>
