---
// Contact links referencing fetched SVG icons (public/icons/*.svg)
interface Link { href: string; label: string; icon: string; }
const links: Link[] = [
  { href: 'https://github.com/dotMavriQ', label: 'GitHub', icon: '/icons/github.svg' },
  { href: 'https://www.linkedin.com/in/janssonjonatan/', label: 'LinkedIn', icon: '/icons/linkedin.svg' },
  { href: 'https://www.youtube.com/@dotMavriq/videos', label: 'YouTube', icon: '/icons/youtube.svg' },
  { href: 'https://matrix.to/#/@dotmavriq:chat.dotmavriq.life', label: 'Matrix', icon: '/icons/matrix.svg' },
  { href: 'https://social.dotmavriq.life/users/dotmavriq', label: 'Fediverse', icon: '/icons/fediverse.svg' }
];
---
<nav aria-label="Contact" class="mt-6 text-sm tracking-tight">
  <ul class="flex flex-wrap justify-center gap-4 text-sm" role="list">
    {links.map(l => (
      <li>
        <a href={l.href} aria-label={l.label} title={l.label} class="group inline-flex items-center justify-center w-9 h-9 rounded-md bg-gruv-surface2/40 hover:bg-gruv-surface2 focus:bg-gruv-surface2 border border-gruv-surface transition" rel="noopener noreferrer" target="_blank">
          <img src={l.icon} alt="" width="20" height="20" class="opacity-85 group-hover:opacity-100 group-focus:opacity-100 transition" loading="lazy" />
        </a>
      </li>
    ))}
    <li>
      <a href="/rss.xml" aria-label="RSS" title="RSS" class="group inline-flex items-center justify-center w-9 h-9 rounded-md bg-gruv-surface2/40 hover:bg-gruv-surface2 focus:bg-gruv-surface2 border border-gruv-surface transition">
        <span class="text-xs font-medium text-gruv-yellow">RSS</span>
      </a>
    </li>
  </ul>
</nav>
<style>
  nav[aria-label=Contact] a{ transition:color .15s ease; }
</style>