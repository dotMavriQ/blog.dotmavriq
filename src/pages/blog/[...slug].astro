---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Only generate pages for real posts (exclude placeholder or draft markers)
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts
    .filter(p => p.slug !== 'placeholder' && !(p.data as any).draft)
    .map(p => ({ params: { slug: p.slug } }));
}

const { slug } = Astro.params;
const posts = await getCollection('blog');
const post = posts.find(p => p.slug === slug);
if (!post) return Astro.redirect('/blog');
// Astro content entry render helper returns Content component
const { Content } = await post.render();
---
<BaseLayout title={post.data.title} description={post.data.excerpt || ''}>
  <article class="prose prose-invert max-w-none">
    <h1>{post.data.title}</h1>
    <time class="text-sm text-gruv-muted" datetime={post.data.pubDate.toISOString()}>{post.data.pubDate.toDateString()}</time>
    {post.data.tags.length > 0 && (
      <ul class="flex gap-2 mt-2 text-xs">
        {post.data.tags.map(t => <li class="px-2 py-1 bg-gruv-surface text-gruv-fg rounded" >{t}</li>)}
      </ul>
    )}
    <div class="mt-6">
      <Content />
    </div>
  </article>
</BaseLayout>
