---
import BaseLayout from '../../layouts/BaseLayout.astro';
// Coming soon placeholder – real posts & listing logic re-enabled later.
const posts: any[] = [];
---
<BaseLayout title="Blog · Coming Soon" description="Articles & notes coming soon">
  <section class="relative z-30 max-w-3xl mx-auto px-6 md:px-10 py-14 md:py-20 text-center select-none">
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-gruv-fg mb-6">Blog</h1>
    <div class="inline-flex items-center gap-3 px-5 py-3 rounded-xl border border-[#504945] bg-[#1d2021]/85 shadow shadow-black/40 backdrop-blur-sm">
      <span class="relative flex h-3 w-3">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-gruv-yellow opacity-60"></span>
        <span class="relative inline-flex rounded-full h-3 w-3 bg-gruv-yellow"></span>
      </span>
      <p class="font-mono text-sm tracking-wide text-[#ebdbb2]/90">Content pipeline <span class="text-gruv-yellow">warming up</span>.</p>
    </div>
    <p class="mt-8 text-[15px] leading-relaxed text-gruv-fg/85 max-w-xl mx-auto">Drafts on architecture patterns, debugging war stories, performance profiling and ecosystem design will appear here soon. RSS stays up – first drop will populate it automatically.</p>
  </section>
</BaseLayout>
