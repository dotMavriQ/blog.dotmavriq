---
import BaseLayout from "../layouts/BaseLayout.astro";
import RoadAnimation from "../components/RoadAnimation.astro";

const title = "blog.dotMavriQ";
---

<BaseLayout title={title}>
  <div
    class="relative flex flex-col min-h-screen p-4 sm:p-8 md:p-16 bg-background text-foreground"
    style="font-family:var(--font-geist-sans)"
  >
    <!-- Road animation (background) -->
    <RoadAnimation />

    <div
      class="relative z-30 flex flex-col flex-grow items-center justify-center"
    >
      <img
        alt="Solid Snake GBC"
        class="hero-image dark:invert mb-8"
        src="/solidsnakegbc.gif"
        width="180"
        height="38"
      />

      <!-- Social links -->
      <div class="social-links-row flex flex-wrap justify-center gap-6">
        <a
          href="https://github.com/dotMavriQ"
          target="_blank"
          rel="noopener noreferrer"
          class="social-link github"
          aria-label="GitHub profile"
        >
          <img
            alt="GitHub"
            class="social-icon"
            src="/github.svg"
            width="40"
            height="40"
          />
        </a>
        <a
          href="https://www.linkedin.com/in/janssonjonatan/"
          target="_blank"
          rel="noopener noreferrer"
          class="social-link linkedin"
          aria-label="LinkedIn profile"
        >
          <img
            alt="LinkedIn"
            class="social-icon"
            src="/linkedin.svg"
            width="40"
            height="40"
          />
        </a>
        <a
          href="https://www.youtube.com/@dotMavriq/videos"
          target="_blank"
          rel="noopener noreferrer"
          class="social-link youtube"
          aria-label="YouTube channel"
        >
          <img
            alt="YouTube"
            class="social-icon"
            src="/youtube.svg"
            width="40"
            height="40"
          />
        </a>
        <a
          href="https://matrix.to/#/@dotmavriq:chat.dotmavriq.life"
          target="_blank"
          rel="noopener noreferrer"
          class="social-link matrix"
          aria-label="Matrix chat"
        >
          <img
            alt="Matrix"
            class="social-icon"
            src="/matrix.svg"
            width="40"
            height="40"
          />
        </a>
        <a
          href="https://social.dotmavriq.life/users/dotmavriq"
          target="_blank"
          rel="noopener noreferrer"
          class="social-link fediverse"
          aria-label="Fediverse profile"
        >
          <img
            alt="Fediverse"
            class="social-icon"
            src="/fediverse.svg"
            width="40"
            height="40"
          />
        </a>
      </div>

      <!-- Action buttons -->
      <div class="hero-actions relative z-30" aria-label="Primary actions">
        <a
          href="/portfolio"
          class="hero-btn hero-btn-primary"
          aria-label="View Portfolio"
        >
          <svg aria-hidden="true" viewBox="0 0 20 20"
            ><path
              fill-rule="evenodd"
              d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
              clip-rule="evenodd"></path></svg
          >
          <span>View Portfolio</span>
        </a>
        <a
          href="/blog"
          class="hero-btn hero-btn-secondary"
          aria-label="Read Blog">Read Blog</a
        >
      </div>
      <!-- Quick links -->
      <div
        class="quick-links-row relative z-10 flex flex-wrap items-center justify-center gap-6"
        aria-label="Secondary navigation"
      >
        <a
          class="quick-link about-link flex items-center gap-2 hover:underline hover:underline-offset-4"
          href="/about"
          ><img
            aria-hidden="true"
            alt=""
            src="/file.svg"
            width="16"
            height="16"
          />
          <span>About Me</span></a
        >
        <a
          class="quick-link cv-link flex items-center gap-2 hover:underline hover:underline-offset-4"
          href="/cv"
          ><img
            aria-hidden="true"
            alt=""
            src="/globe.svg"
            width="16"
            height="16"
          />
          <span>My CV</span></a
        >
        <a
          class="quick-link contact-link flex items-center gap-2 hover:underline hover:underline-offset-4"
          href="/contact"
          ><img
            aria-hidden="true"
            alt=""
            src="/window.svg"
            width="16"
            height="16"
          />
          <span>Contact</span></a
        >
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .social-icon {
    width: clamp(30px, 6vw, 40px);
    height: auto;
  }
  .hero-image {
    --hero-offset: 28.5rem; /* consumed by RoadAnimation to virtually keep apex higher */
    max-width: 100%;
    height: auto;
    width: clamp(120px, 20vw, 180px);
    display: block;
    image-rendering: pixelated;
    margin-top: var(--hero-offset);
  }
</style>
<style>
  .social-links-row {
    margin-bottom: 1.1rem;
  }
  .social-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    will-change: transform;
  }
  .social-link {
    transition: transform 0.18s ease;
  }
  .social-link:focus-visible {
    outline: 2px solid var(--fg-color);
    outline-offset: 3px;
    border-radius: 4px;
  }
  .social-link:hover {
    transform: translateY(-2px);
  }
  .social-link:active {
    transform: translateY(-1px) scale(0.96);
  }
  /* Accent glow using pseudo-element (keeps original logos intact) */
  .social-link::after {
    content: "";
    position: absolute;
    inset: -6px;
    border-radius: 14px;
    background: var(--accent-color, transparent);
    opacity: 0;
    transform: scale(0.6);
    filter: blur(10px);
    transition:
      opacity 0.28s ease,
      transform 0.28s ease;
    z-index: -1;
  }
  .social-link:hover::after {
    opacity: 0.75;
    transform: scale(1);
  }
  .social-link.github {
    --accent-color: var(--orange);
  }
  .social-link.linkedin {
    --accent-color: var(--blue);
  }
  .social-link.youtube {
    --accent-color: var(--red);
  }
  .social-link.matrix {
    --accent-color: var(--green);
  }
  .social-link.fediverse {
    --accent-color: var(--yellow);
  }
  @media (prefers-reduced-motion: reduce) {
    .social-link {
      transition: none;
    }
    .social-link:hover,
    .social-link:active {
      transform: none;
    }
    .social-link::after,
    .social-link:hover::after {
      transition: none;
    }
  }
  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.85rem;
    margin-bottom: 1rem;
  }
  .quick-links-row {
    margin-top: 1.2rem;
    gap: 1.25rem;
  }
  .quick-link {
    position: relative;
    font-weight: 500;
    color: var(--fg-color);
    transition:
      color 0.18s ease,
      transform 0.18s ease;
    line-height: 1.2;
  }
  .quick-link span {
    display: inline-block;
  }
  .quick-link:hover {
    transform: translateY(-1px);
  }
  .quick-link:active {
    transform: translateY(-1px) scale(0.97);
  }
  .quick-link:focus-visible {
    outline: 2px solid var(--fg-color);
    outline-offset: 3px;
    border-radius: 4px;
  }
  /* Gruvbox hover accents matching nav colors */
  .quick-link.about-link:hover {
    color: var(--blue);
  }
  .quick-link.cv-link:hover {
    color: var(--orange);
  }
  .quick-link.contact-link:hover {
    color: var(--red);
  }
  @media (prefers-reduced-motion: reduce) {
    .quick-link,
    .quick-link:hover,
    .quick-link:active {
      transition: color 0.18s ease;
      transform: none;
    }
  }
  @media (min-width: 640px) {
    .social-links-row {
      margin-bottom: 1.3rem;
    }
    .hero-actions {
      margin-top: 1.2vh;
      margin-bottom: 1.05rem;
    }
    .quick-links-row {
      margin-top: 1.6rem;
      gap: 2rem;
    }
  }
  @media (min-width: 1100px) {
    .quick-links-row {
      margin-top: 2.1rem;
      gap: 2.4rem;
    }
  }
  .hero-btn {
    position: relative;
    z-index: 2;
    display: inline-flex;
    align-items: center;
    font-weight: 500;
    font-size: clamp(0.9rem, 0.86rem + 0.2vw, 1.02rem);
    line-height: 1.15;
    border-radius: 9999px;
    padding: 0.58rem 1.15rem;
    min-height: 2.4rem;
    text-decoration: none;
    cursor: pointer;
    -webkit-font-smoothing: antialiased;
    transition:
      background-color 0.18s ease,
      color 0.18s ease,
      border-color 0.18s ease,
      box-shadow 0.18s ease;
  }
  .hero-btn svg {
    width: 1.05rem;
    height: 1.05rem;
    flex-shrink: 0;
    display: block;
  }
  .hero-btn-primary {
    background: #cdbfa1;
    color: #282828;
    box-shadow:
      0 0 0 1px rgba(0, 0, 0, 0.06),
      0 1px 2px rgba(0, 0, 0, 0.22);
  }
  .hero-btn-primary:hover {
    background: var(--green); /* Portfolio color */
    color: #282828;
    box-shadow:
      0 2px 6px rgba(0, 0, 0, 0.35),
      0 0 0 1px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
  }
  .hero-btn-primary:active {
    background: #a89984;
    transform: translateY(-1px) scale(0.97);
  }
  .hero-btn-secondary {
    background: #282828;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
  }
  .hero-btn-secondary:hover {
    background: var(--yellow); /* Blog color */
    border-color: var(--yellow);
    color: #282828;
    box-shadow:
      0 2px 6px rgba(0, 0, 0, 0.35),
      0 0 0 1px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
  }
  .hero-btn-secondary:active {
    background: #3a3a3a;
    transform: translateY(-1px) scale(0.97);
  }
  .hero-btn {
    will-change: transform;
  }
  @media (prefers-reduced-motion: reduce) {
    .hero-btn {
      transition:
        background-color 0.18s ease,
        color 0.18s ease,
        border-color 0.18s ease,
        box-shadow 0.18s ease;
    }
    .hero-btn:hover,
    .hero-btn:active {
      transform: none;
    }
  }
  .hero-btn:focus-visible {
    outline: 2px solid var(--text-primary);
    outline-offset: 2px;
  }
  @media (max-width: 560px) {
    .hero-btn {
      font-size: 0.85rem;
      padding: 0.52rem 1rem;
      min-height: 2.25rem;
      gap: 0.45rem;
    }
  }
  /* Removed duplicate legacy style block below */
  /* Removed duplicate legacy style block below; per-element vertical offsets used instead */
</style>
