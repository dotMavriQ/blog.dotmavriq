---
import BaseLayout from "../layouts/BaseLayout.astro";
import RoadAnimation from "../components/RoadAnimation.astro";

const title = "blog.dotMavriQ";
---

<BaseLayout title={title}>
  <div class="relative flex flex-col min-h-screen p-4 sm:p-8 md:p-16 bg-background text-foreground" style="font-family:var(--font-geist-sans)">
    <!-- Road animation (background) -->
    <RoadAnimation />

    <div class="relative z-20 flex flex-col flex-grow items-center justify-center gap-8">
      <!-- Hero GIF -->
      <img alt="Solid Snake GBC" class="hero-image dark:invert" src="/solidsnakegbc.gif" width="180" height="38" />

      <!-- Social links -->
      <div class="flex flex-wrap justify-center gap-6">
        <a href="https://github.com/dotMavriQ" target="_blank" rel="noopener noreferrer" class="transition hover:opacity-75" aria-label="GitHub profile">
          <img alt="GitHub" class="social-icon" src="/github.svg" width="40" height="40" />
        </a>
        <a href="https://www.linkedin.com/in/janssonjonatan/" target="_blank" rel="noopener noreferrer" class="transition hover:opacity-75" aria-label="LinkedIn profile">
          <img alt="LinkedIn" class="social-icon" src="/linkedin.svg" width="40" height="40" />
        </a>
        <a href="https://www.youtube.com/@dotMavriq/videos" target="_blank" rel="noopener noreferrer" class="transition hover:opacity-75" aria-label="YouTube channel">
          <img alt="YouTube" class="social-icon" src="/youtube.svg" width="40" height="40" />
        </a>
        <a href="https://matrix.to/#/@dotmavriq:chat.dotmavriq.life" target="_blank" rel="noopener noreferrer" class="transition hover:opacity-75" aria-label="Matrix chat">
          <img alt="Matrix" class="social-icon" src="/matrix.svg" width="40" height="40" />
        </a>
        <a href="https://social.dotmavriq.life/users/dotmavriq" target="_blank" rel="noopener noreferrer" class="transition hover:opacity-75" aria-label="Fediverse profile">
          <img alt="Fediverse" class="social-icon" src="/fediverse.svg" width="40" height="40" />
        </a>
      </div>

      <!-- Action buttons -->
      <div class="flex flex-wrap justify-center gap-4">
        <a class="rounded-full border border-solid border-transparent transition-colors flex items-center justify-center bg-foreground text-background gap-2 hover:bg-[#383838] dark:hover:bg-[#ccc] text-sm sm:text-base h-10 sm:h-12 px-4 sm:px-5" href="/portfolio">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"/></svg>
          View Portfolio
        </a>
        <a class="rounded-full border border-solid border-black/[.08] dark:border-white/[.145] transition-colors flex items-center justify-center hover:bg-[#f2f2f2] dark:hover:bg-[#1a1a1a] hover:border-transparent text-sm sm:text-base h-10 sm:h-12 px-4 sm:px-5 sm:min-w-44" href="/blog">Read Blog</a>
      </div>

      <!-- Quick links -->
      <div class="relative z-10 mt-4 flex flex-wrap items-center justify-center gap-6">
        <a class="flex items-center gap-2 hover:underline hover:underline-offset-4" href="/about"><img aria-hidden="true" alt="" src="/file.svg" width="16" height="16"/> About Me</a>
        <a class="flex items-center gap-2 hover:underline hover:underline-offset-4" href="/cv"><img aria-hidden="true" alt="" src="/globe.svg" width="16" height="16"/> My CV</a>
        <a class="flex items-center gap-2 hover:underline hover:underline-offset-4" href="/contact"><img aria-hidden="true" alt="" src="/window.svg" width="16" height="16"/> Contact</a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .social-icon { width: clamp(30px, 6vw, 40px); height: auto; }
  .hero-image { max-width: 100%; height: auto; width: clamp(120px, 20vw, 180px); display:block; }
</style>
